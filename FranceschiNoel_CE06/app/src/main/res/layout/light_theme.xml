<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="70dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageButton
        android:id="@+id/widget_imageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
        android:background="@drawable/ic_cloud_circle_black_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/widget_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/widget_imageButton"
        android:text="Weather Conditions"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="10dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/widget_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_conditions"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/widget_imageButton"
        android:text="00 F"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/widget_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_temp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/widget_imageButton"
        android:text="Kissimmee"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/widget_config"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="0dp"
        android:background="@drawable/ic_settings_black_24dp"
        android:padding="0dp"
        android:textSize="8sp"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_city"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/widget_imageButton"
        android:text="00:00:00 00/00/00"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="8dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />

</RelativeLayout>