<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_food_truck_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view_reviews_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/include" />

    <TextView
        android:text="Joes Diner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_truck_name"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#2d2d2d"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3" />

    <TextView
        android:text="Food Truck:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="$9.99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_food_cost"
        android:textSize="16sp"
        android:layout_marginStart="22dp"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        android:layout_marginLeft="22dp"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="@+id/textView9" />

    <TextView
        android:text="Avg Cost:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:text="Food Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:text="Breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_food_type"
        android:textSize="16sp"
        android:textColor="#2d2d2d"
        android:layout_marginStart="13dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:layout_marginLeft="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8" />

    <Button
        android:text="Reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_reviews_btn"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:text="Add Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_review_btn"
        app:layout_constraintBottom_toBottomOf="@+id/view_reviews_btn"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/view_reviews_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/modify_truck_btn"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#ffffff" />

    <Button
        android:text="Modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modify_truck_btn"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_review_btn"
        android:backgroundTint="#3F51B5"
        android:textColor="#ffffff"/>

</android.support.constraint.ConstraintLayout>